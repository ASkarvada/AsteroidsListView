<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsteroidsListView.View.AddNewObject">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Name" HorizontalOptions="CenterAndExpand" Text="{Binding Name}" />
            <Entry Placeholder="Type" HorizontalOptions="CenterAndExpand" Text="{Binding Type}"/>
            <Entry Placeholder="Age" HorizontalOptions="CenterAndExpand" Text="{Binding Age}"/>
            <Button Text="Uložit" VerticalOptions="End" Clicked="Save_Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>